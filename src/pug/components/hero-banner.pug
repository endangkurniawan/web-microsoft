//-------------------------------------------------------------------------------
 @name: Components | Hero Banner
 @desc: Hero banner Microsoft
//-------------------------------------------------------------------------------//

='\n'
//hero-banner__item
.hero-banner__item
  .container
    .hero-banner__content
      .hero-banner__background
        ='\n'
        img.hero-banner__img.img--dekstop(src=val.imgD alt=val.alt)/
        ='\n'
        img.hero-banner__img.img--mobile(src=val.imgM alt=val.alt)/
      .hero-banner__text
        h2.hero-banner__title
          | !{val.title}
        p.hero-banner__desc
          | !{val.desc}
        .hero-banner__btn
          ='\n'
          a.btn(class=val.btn.btnName href=val.btn.to)
            | !{val.btn.text}
          if val.link && val.link.to
            ='\n'
            a.hero-banner__link(href=val.link.to)
              | !{val.link.text}
    ='\n'
